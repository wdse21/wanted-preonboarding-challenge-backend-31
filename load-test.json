{
  "config": {
    "target": "http://localhost:3000",
    "phases": [
      {
        "duration": 60,
        "arrivalRate": 500,
        "rate": 1
      }
    ]
  },
  "scenarios": [
    {
      "flow": [
        {
          "post": {
            "url": "/auth/signin",
            "json": {
              "name": "테스트",
              "email": "test@naver.com"
            },
            "capture": { "json": "$.accessToken", "as": "accessToken" }
          }
        },
        {
          "get": {
            "url": "/products?page=1&take=10&sort=ASC&status=SOLDOUT&seller=0c85db88-7af6-47d3-b23d-0d07593dfde7",
            "headers": { "authorization": "Bearer {{accessToken}}" }
          }
        }
      ]
    }
  ]
}
